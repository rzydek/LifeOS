{
    "name": "mfeKnowledge",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "app",
    "sourceRoot": "apps/mfe-knowledge/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/mfe-knowledge",
                "index": "apps/mfe-knowledge/src/index.html",
                "main": "apps/mfe-knowledge/src/main.ts",
                "tsConfig": "apps/mfe-knowledge/tsconfig.app.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/mfe-knowledge/public"
                    }
                ],
                "styles": ["apps/mfe-knowledge/src/styles.scss"],
                "customWebpackConfig": {
                    "path": "apps/mfe-knowledge/webpack.config.ts"
                }
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all",
                    "customWebpackConfig": {
                        "path": "apps/mfe-knowledge/webpack.prod.config.ts"
                    }
                },
                "development": {
                    "buildOptimizer": false,
                    "optimization": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/angular:dev-server",
            "options": {
                "port": 4203,
                "publicHost": "http://localhost:4203"
            },
            "configurations": {
                "production": {
                    "buildTarget": "mfeKnowledge:build:production"
                },
                "development": {
                    "buildTarget": "mfeKnowledge:build:development"
                }
            },
            "defaultConfiguration": "development",
            "dependsOn": ["shell:serve"]
        },
        "extract-i18n": {
            "executor": "@angular-devkit/build-angular:extract-i18n",
            "options": {
                "buildTarget": "mfeKnowledge:build"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/vitest:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "reportsDirectory": "../../coverage/apps/mfe-knowledge"
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "defaultConfiguration": "production",
            "options": {
                "buildTarget": "mfeKnowledge:build",
                "port": 4203,
                "watch": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "mfeKnowledge:build:development"
                },
                "production": {
                    "buildTarget": "mfeKnowledge:build:production"
                }
            }
        }
    }
}
